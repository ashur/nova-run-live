{
	"identifier": "ashur.RunLive",
	"name": "Run Live",
	"author": "Ashur Cabrera",
	"description": "Run snippets of JavaScript in the Nova extension runtime.",
	"version": "1.1.1",
	"main": "main.js",
	"commands": {
		"editor": [
			{
				"title": "Run Nova Snippet",
				"command": "ashur.RunLive.run",
				"shortcut": "cmd-shift-.",
				"when": "editorHasFocus",
				"filter": {
					"syntaxes": ["javascript"]
				}
			},
		]
	},

	"entitlements": {
		"filesystem": "readwrite",
		"process": true,
		"requests": true
	}
}
